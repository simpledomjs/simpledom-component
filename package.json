  "license": "Apache-2.0",
  "main": "lib/main.js",
  "repository": "github:simpledomjs/simpledom-component",
  "scripts": {
    "clean": "del dist && del docs",
    "build": "npm run compile && npm run doc && npm run distribute",
    "compile": "npm run compile:webpack && npm run compile:babel",
    "compile:webpack": "webpack -p --colors --devtool source-map",
    "compile:babel": "babel src --out-dir lib",
    "doc": "esdoc -c ./esdoc.json",
    "distribute": "mkdirp docs && ncp dist docs && ncp showroom docs && ncp esdoc docs/esdoc && echo $npm_package_version > docs/version.txt",
    "deploy": "ncp dist /documentation",
    "start": "webpack-dev-server -d --colors --hot --inline --progress --content-base showroom/",
    "test": "karma start",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "babel-loader": "8.0.4",
    "chai": "4.2.0",
    "del-cli": "1.1.0",
    "esdoc": "1.1.0",
    "esdoc-ecmascript-proposal-plugin": "1.0.0",
    "esdoc-es7-plugin": "0.0.3",
    "esdoc-importpath-plugin": "1.0.2",
    "esdoc-standard-plugin": "1.0.0",
    "karma": "3.1.4",
    "karma-babel-preprocessor": "8.0.0-beta.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-mocha": "1.3.0",
    "karma-requirejs": "1.1.0",
    "karma-webpack": "4.0.0-rc.5",
    "mkdirp": "0.5.1",
    "mocha": "5.2.0",
    "ncp": "2.0.0",
    "release-it": "9.2.0",
    "requirejs": "2.3.6",
    "webpack": "4.28.1",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.10"
  }
}
