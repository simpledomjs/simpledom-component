  "license": "Apache-2.0",
  "main": "lib/main.js",
  "scripts": {
    "clean": "del dist && del docs",
    "build": "npm run compile && npm run doc && npm run distribute",
    "compile": "npm run compile:webpack && npm run compile:babel",
    "compile:webpack": "webpack -p --colors --devtool source-map",
    "compile:babel": "babel src --out-dir lib",
    "doc": "esdoc -c ./esdoc.json",
    "distribute": "mkdirp docs && ncp dist docs && ncp showroom docs && ncp esdoc docs/esdoc && echo $npm_package_version > docs/version.txt",
    "deploy": "ncp dist /documentation",
    "start": "webpack-dev-server -d --colors --hot --inline --progress --content-base showroom/",
    "test": "karma start",
    "release": "release-it"
  },
  "devDependencies": {
    "babel": "6.23.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-loader": "8.0.4",
    "babel-plugin-add-module-exports": "1.0.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-polyfill": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "chai": "4.2.0",
    "del-cli": "1.1.0",
    "esdoc": "1.1.0",
    "esdoc-es7-plugin": "0.0.3",
    "esdoc-importpath-plugin": "1.0.2",
    "file-loader": "2.0.0",
    "karma": "3.1.4",
    "karma-babel-preprocessor": "7.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-mocha": "1.3.0",
    "karma-requirejs": "1.1.0",
    "karma-webpack": "3.0.5",
    "mkdirp": "0.5.1",
    "mocha": "5.2.0",
    "ncp": "2.0.0",
    "requirejs": "2.3.6",
    "style-loader": "0.23.1",
    "url-loader": "1.1.2",
    "webpack": "4.28.0",
    "webpack-dev-server": "3.1.10",
    "release-it": "9.2.0"
  }
}
